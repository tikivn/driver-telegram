{
    "name": "tikivn/driver-telegram",
    "license": "MIT",
    "description": "Telegram driver for BotMan",
    "keywords": [
        "Bot",
        "BotMan",
        "Telegram"
    ],
    "homepage": "http://github.com/tikivn/driver-telegram",
    "authors": [
        {
            "name": "Marcel Pociot",
            "email": "m.pociot@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "tikivn/botman": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "mockery/mockery": "dev-master",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "BotMan\\Drivers\\Telegram\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs": "php-cs-fixer fix"
    }
}
